<?xml version="1.0" encoding="utf-8"?>
<install version="1.5" type="plugin" group="adsmanagercontent" method="upgrade">
    <name>AdsManagerContent - Captcha</name>
    <author>Juloa</author>
    <creationDate>November 2015</creationDate>
    <copyright>Copyright (C) 2011 ITPrism.com. All rights reserved.</copyright>
    <license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
    <authorEmail>support@juloa.com</authorEmail>
    <authorUrl>http://www.Juloa.com</authorUrl>
    <version>3.2</version>
    <description>
    Captcha for Adsmanager
    </description>
    <files>
        <filename plugin="captcha">captcha.php</filename>
        <filename>index.html</filename>
        <folder>captcha</folder>
    </files>
    <languages folder="language">
      	<language tag="en-GB">en-GB.plg_adsmanagercontent_captcha.ini</language>
       	<language tag="fr-FR">fr-FR.plg_adsmanagercontent_captcha.ini</language>
       	<language tag="en-GB">en-GB.plg_adsmanagercontent_captcha.sys.ini</language>
       	<language tag="fr-FR">fr-FR.plg_adsmanagercontent_captcha.sys.ini</language>
   	</languages>
    <params>
        <param
            name="edit_form"
            type="checkbox"
            label="PLG_CAPTCHA_DISPLAY_EDIT_FORM"
            description="PLG_CAPTCHA_DISPLAY_EDIT_FORM_DESC"
            value="1"
        />
        <param
            name="message_form"
            type="checkbox"
            label="PLG_CAPTCHA_DISPLAY_MESSAGE_FORM"
            description="PLG_CAPTCHA_DISPLAY_MESSAGE_DESC"
            value="1"
        />
        <param
            name="profile_form"
            type="checkbox"
            label="PLG_CAPTCHA_DISPLAY_PROFILE_FORM"
            description="PLG_CAPTCHA_DISPLAY_PROFILE_DESC"
            value="1"
        />
    </params> 
</install>