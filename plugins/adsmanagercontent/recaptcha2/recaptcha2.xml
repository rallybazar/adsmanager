<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="adsmanagercontent" method="upgrade">
	<name>AdsManagerContent - ReCaptcha 2</name>
	<version>1.0</version>
	<creationDate>January 2018</creationDate>
	<author>Growunder</author>
	<creationDate>January 2018</creationDate>
	<copyright>Copyright (C) 2005 - 2018 Open Source Matters. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<description>ReCaptcha for Adsmanager Vers√£o Google Recaptcha 2</description>
	<files>
		<filename
				plugin="recaptcha2">recaptcha2.php</filename>
	</files>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.plg_adsmanagercontent_recaptcha2.ini</language>
		<language tag="fr-FR">fr-FR/fr-FR.plg_adsmanagercontent_recaptcha2.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_adsmanagercontent_recaptcha2.sys.ini</language>
		<language tag="fr-FR">fr-FR/fr-FR.plg_adsmanagercontent_recaptcha2.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
						name="public_key"
						type="text"
						default=""
						label="PLG_RECAPTCHAX_PUBLIC_KEY_LABEL"
						description="PLG_RECAPTCHAX_PUBLIC_KEY_DESC"
						required="true"
						filter="string"
						size="50" />

				<field
						name="private_key"
						type="text"
						default=""
						label="PLG_RECAPTCHAX_PRIVATE_KEY_LABEL"
						description="PLG_RECAPTCHAX_PRIVATE_KEY_DESC"
						required="true"
						filter="string"
						size="50" />

				<field
						name="theme"
						type="list"
						default="clean"
						label="PLG_RECAPTCHAX_THEME_LABEL"
						description="PLG_RECAPTCHAX_THEME_DESC"
						required="true"
						filter="">
					<option
							value="clean">PLG_RECAPTCHAX_THEME_CLEAN</option>
					<option
							value="white">PLG_RECAPTCHAX_THEME_WHITE</option>
					<option
							value="blackglass">PLG_RECAPTCHAX_THEME_BLACKGLASS</option>
					<option
							value="red">PLG_RECAPTCHAX_THEME_RED</option>
				</field>
				<field
						name="edit_form"
						type="checkbox"
						label="PLG_RECAPTCHAX_DISPLAY_EDIT_FORM"
						description="PLG_RECAPTCHAX_DISPLAY_EDIT_FORM_DESC"
						value="1"
				/>
				<field
						name="message_form"
						type="checkbox"
						label="PLG_RECAPTCHAX_DISPLAY_MESSAGE_FORM"
						description="PLG_RECAPTCHAX_DISPLAY_MESSAGE_DESC"
						value="1"
				/>
				<field
						name="profile_form"
						type="checkbox"
						label="PLG_RECAPTCHAX_DISPLAY_PROFILE_FORM"
						description="PLG_RECAPTCHAX_DISPLAY_PROFILE_DESC"
						value="1"
				/>
			</fieldset>
		</fields>
	</config>
</extension>
