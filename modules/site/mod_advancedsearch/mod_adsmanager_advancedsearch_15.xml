<?xml version="1.0" encoding="utf-8"?>
<install type="module" version="1.5" method="upgrade">
	<name>mod_adsmanager_advancedsearch</name>
	<author>Thomas Papin</author>
	<creationDate>November 2015</creationDate>
	<license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
	<authorEmail>support@juloa.com</authorEmail>
	<authorUrl>www.Juloa.com</authorUrl>
	<version>3.2</version>
	<description>AdsManager Search Module</description>
	<files>
		<filename module="mod_adsmanager_advancedsearch">mod_adsmanager_advancedsearch.php</filename>
		<filename>mod_adsmanager_advancedsearch.xml</filename>
		<filename>index.html</filename>
        <filename>tmpl/index.html</filename>
        <filename>tmpl/default.php</filename>
	<filename>img/index.html</filename>
        <filename>img/arrow_down.png</filename>
	<filename>img/arrow_up.png</filename>
	</files>
	<languages folder="language">
        <language tag="en-GB">en-GB.mod_adsmanager_advancedsearch.ini</language>
        <language tag="en-GB">en-GB.mod_adsmanager_advancedsearch.sys.ini</language>
        <language tag="fr-FR">fr-FR.mod_adsmanager_advancedsearch.ini</language>
        <language tag="fr-FR">fr-FR.mod_adsmanager_advancedsearch.sys.ini</language>
    </languages>
	<params>
		<param name="search_by_cat" type="radio" default="1" label="Display Search by Category" description="">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</param>
        <param name="display_cat_label" type="radio" default="0" label="Display categories list label" description="">
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </param>
        <param name="search_by_text" type="radio" default="1" label="Display by search by text" description="">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</param>
		<param name="keep_itemid" type="radio" default="0" label="Keep Itemdid" description="">
			<option value="0">MOD_ADSMANAGER_SEARCH_NO</option>
			<option value="1">MOD_ADSMANAGER_SEARCH_YES</option>
		</param>
	    <param name="rootid" type="text" default="" size="4" label="Root Category" description="Limit Ads to this root category" />
		<param name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="A suffix to be applied to the css class of the module (table.moduletable), this allows individual module styling" />
	</params>
</install>
